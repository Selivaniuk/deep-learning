{
    "compilerOptions": {
      "outDir": "./build",
      "noImplicitAny": true,
      "module": "ESNext",
      "target": "ES5",
      "jsx": "react-jsx",
      "allowJs": true,
      "moduleResolution": "node",
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true,
      "baseUrl": ".",
      "paths": {
        "*":["./src/*"]
        }
    },

    "exclude": ["node_modules"],

    "ts-node": {
        "compilerOptions": {
          "module": "CommonJS"
        }
      }
  }
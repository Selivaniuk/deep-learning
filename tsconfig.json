{
    "compilerOptions": {
      "outDir": "./build",
      "noImplicitAny": true,
      "module": "ESNext",
      "target": "ES5",
      "jsx": "react-jsx",
      "allowJs": true,
      "moduleResolution": "node",
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true,
      "strictNullChecks":true,
      "baseUrl": ".",
	  "skipLibCheck": true,
      "paths": {
        "*":["./src/*"]
        },
    },

    "exclude": ["node_modules", "build"],

    "ts-node": {
        "compilerOptions": {
          "module": "CommonJS"
        }
      }
  }